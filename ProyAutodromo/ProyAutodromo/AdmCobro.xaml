<Window x:Class="AdmCobro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyAutodromo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        
        Title="AdmCobro" Height="150" Width="300">
    <Grid>
        <StackPanel  Orientation="Horizontal" Margin="10,10,0,0">
            <StackPanel Margin="10,10,0,0" >
                <TextBlock x:Name="lblNombreCompetidor" HorizontalAlignment="Left"   TextWrapping="Wrap" Text="Cantidad Cobro $ : " VerticalAlignment="Top"  />

            </StackPanel>
            <StackPanel Margin="10,10,0,0">
                <TextBox x:Name="txtCantidadCobro" HorizontalAlignment="Left"   RenderTransformOrigin="0.5,0.5" Width="150"  Height="20"/>
            </StackPanel>

        </StackPanel>
        <StackPanel  Orientation="Horizontal" HorizontalAlignment="Right">
            <Button  Width="80" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0"  Click="Button_Click">
                Guardar
            </Button>
            <Button Width="80" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,5,0"   Click="Button_Click_1">
                Cancelar
            </Button>
        </StackPanel>

    </Grid>
</Window>
