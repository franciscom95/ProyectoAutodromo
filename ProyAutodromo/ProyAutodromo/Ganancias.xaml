<Window x:Class="Ganancias"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProyAutodromo"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Ganancias" Height="320.938" Width="221.649">
    <Grid >
        <StackPanel Orientation="Vertical" Margin="0,0,0,22">

            <Label HorizontalAlignment="Center">Torneo</Label>
            <ComboBox SelectionChanged="CbTorneo_SelectionChanged" x:Name="CbTorneo" Width="150" Margin="10"></ComboBox>


            <Label x:Name="lblUno">Lugar 1 :</Label>
            <Label x:Name="lbldos">Lugar 2 :</Label>
            <Label x:Name="lbltres">Lugar 3 :</Label>
            <Label x:Name="CantidadParticipantes"># Participantes</Label>
            <Label x:Name="lblCosto" >Costo X Participante</Label>
            <Label x:Name="LblRecaudado">Recaudado :</Label>

            <Button HorizontalAlignment="Right" Width="100" Height="20" Margin="0,0,10,0" >Cerrar</Button>
        </StackPanel>
    </Grid>
</Window>
